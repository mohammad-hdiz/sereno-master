<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    tools:showIn="@layout/activity_patient_inf"
    android:background="@color/test"
    android:isScrollContainer="false"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="3.5">

            <LinearLayout
                android:id="@+id/age_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_card_background"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Age"
                        android:textSize="15dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/age_edt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:layout_margin="20dp"
                        android:gravity="center_vertical"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionDone"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="42"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical"
           >
            <RelativeLayout
                android:id="@+id/visit_layout"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                >
                <LinearLayout
                    android:id="@+id/visit"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:background="@drawable/white_card_background"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Reason for Visit"
                        android:textSize="20dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/a1"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A1"
                            android:layout_margin="10dp"
                            />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/a2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="A2"
                            tools:ignore="TouchTargetSizeCheck" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/a3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="A3"
                            tools:ignore="TouchTargetSizeCheck" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/a4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="A4"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/visit_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/vis_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                     />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cancer_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                >

                <LinearLayout
                    android:id="@+id/cancer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_card_background"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="Patient Cancer History"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:minHeight="48dp"
                                android:text="Yes"
                                tools:ignore="TouchTargetSizeCheck" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="No" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/patient_cancer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="Type of Cancer"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/cancer_type_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="Type of Cancer"
                            android:textSize="15dp" />
                        <ImageView
                            android:id="@+id/cancer_edt"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/edit" />
                        <com.qandeelabbassi.dropsy.DropDownView
                            android:id="@+id/cancer_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:dropsyElevation="@dimen/drop_down_elevation"
                            app:dropsyItems="@array/cancer_type"
                            app:dropsySelector="@color/dropsy_selector"
                            app:dropsyValueColor="@color/dropsy_text_color" />


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cancer_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/can_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cancer_f_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <LinearLayout
                    android:id="@+id/cancer_f"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_card_background"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="Family Cancer History"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/yes_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="Yes"
                                tools:ignore="TouchTargetSizeCheck" />

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/no_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="No" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/patient_f_type_lay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="Type of Cancer"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/cancer_f_type_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textSize="15dp" />
                        <ImageView
                            android:id="@+id/cancer_f_edt"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:visibility="gone"
                            android:padding="5dp"
                            android:src="@drawable/edit" />

                        <com.qandeelabbassi.dropsy.DropDownView
                            android:id="@+id/cancer_f_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            app:dropsyElevation="@dimen/drop_down_elevation"
                            app:dropsyItems="@array/cancer_type"
                            app:dropsySelector="@color/dropsy_selector"
                            app:dropsyValueColor="@color/dropsy_text_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/patient_f_rel_lay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="RelationShip"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/rel_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textSize="15dp" />
                        <ImageView
                            android:id="@+id/rel_edt"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/edit" />
                        <com.qandeelabbassi.dropsy.DropDownView
                            android:id="@+id/relationship_f"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            app:dropsyElevation="@dimen/drop_down_elevation"
                            app:dropsyItems="@array/relationship"
                            app:dropsySelector="@color/dropsy_selector"
                            app:dropsyValueColor="@color/dropsy_text_color" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cancer_f_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/can_f_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menopausal_layout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                >

                <LinearLayout
                    android:id="@+id/menopausal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_card_background"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Menopausal status"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/meno_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/meno_edt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/edit"
                        android:visibility="gone" />

                    <com.qandeelabbassi.dropsy.DropDownView
                        android:id="@+id/menopausal_dropdown"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:dropsyElevation="@dimen/drop_down_elevation"
                        app:dropsyItems="@array/menopausal"
                        app:dropsySelector="@color/dropsy_selector"
                        app:dropsyValueColor="@color/dropsy_text_color" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menopausal_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/meno_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/gender_layout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                >
                <LinearLayout
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:background="@drawable/white_card_background"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textSize="20dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/gender_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="15dp" />
                    <ImageView
                        android:id="@+id/gender_edt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:src="@drawable/edit" />
                    <com.qandeelabbassi.dropsy.DropDownView
                        android:id="@+id/gender_dropdown"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:dropsyElevation="@dimen/drop_down_elevation"
                        app:dropsyItems="@array/gender"
                        app:dropsySelector="@color/dropsy_selector"
                        app:dropsyValueColor="@color/dropsy_text_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gender_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/gen_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/race_layout"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:visibility="gone"
                >

                <LinearLayout
                    android:id="@+id/race"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_card_background"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Race"
                        android:textSize="20dp" />

                    <com.qandeelabbassi.dropsy.DropDownView
                        android:id="@+id/race_dropdown"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:dropsyElevation="@dimen/drop_down_elevation"
                        app:dropsyItems="@array/race"
                        app:dropsySelector="@color/dropsy_selector"
                        app:dropsyValueColor="@color/dropsy_text_color" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/race_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/ra_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/comorbidities_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                >

                <LinearLayout
                    android:id="@+id/comorbidities"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_card_background"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Comorbidities"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/c1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="C1" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/c2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="C2" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/c3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="C3" />

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/c4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:text="C4" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/comorbidities_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/como_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/adherence_layout"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <LinearLayout
                    android:id="@+id/adherence"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/white_card_background"
                    android:orientation="horizontal"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Adherence"
                        android:textSize="20dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/adh_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="15dp" />
                    <ImageView
                        android:id="@+id/adh_edt"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:src="@drawable/edit" />
                    <com.qandeelabbassi.dropsy.DropDownView
                        android:id="@+id/adherence_dropdown"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:dropsyElevation="@dimen/drop_down_elevation"
                        app:dropsyItems="@array/adherence"
                        app:dropsySelector="@color/dropsy_selector"
                        app:dropsyValueColor="@color/dropsy_text_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/adherence_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <Button
                        android:id="@+id/adh_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/medications_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/medications"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/white_card_background"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text="Medications"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/medi_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/medi_edt"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:src="@drawable/edit" />
                        <com.qandeelabbassi.dropsy.DropDownView
                            android:id="@+id/medication_dropdown"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:dropsyElevation="@dimen/drop_down_elevation"
                            app:dropsyItems="@array/medication"
                            app:dropsySelector="@color/dropsy_selector"
                            app:dropsyValueColor="@color/dropsy_text_color" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pres_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/medications_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/med_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Note"
                        android:textSize="15dp"
                        android:layout_margin="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/white_background6"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <Button
                android:id="@+id/visit_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/white_background6"
                app:layout_constraintRight_toLeftOf="@id/guideline"
                app:layout_constraintHorizontal_chainStyle="packed"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/save_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="5dp"
                android:background="@drawable/white_background6"
                android:text="Save"
                app:layout_constraintLeft_toRightOf="@id/guideline"
                app:layout_constraintHorizontal_chainStyle="packed"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>